<Window x:Class="CSplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSplayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="565" Width="728" MinWidth="800" MinHeight="600">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DockPanel x:Name="mainBlock" Grid.ColumnSpan="8">
            <Grid x:Name="bottomMenu" DockPanel.Dock="Bottom" Height="70">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF4F4F4F" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90*"/>
                    <ColumnDefinition Width="180*"/>
                    <ColumnDefinition Width="90*"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="slider" Margin="10,-6,10,40" Grid.ColumnSpan="3"/>
                <Button x:Name="stopButton" Margin="126,11,14,13" MaxWidth="35" MaxHeight="35"/>
                <Button x:Name="playButton" Margin="10,12,155,14" MaxWidth="35" MaxHeight="35" Width="35"/>
                <Button x:Name="pauseButton" Margin="77,11,88,13" MaxWidth="35" MaxHeight="35" Width="35"/>
                <Label x:Name="volumeLabel" Content="Volume" Grid.Column="2" HorizontalAlignment="Center" Margin="0,12,0,0" VerticalAlignment="Top" Width="56" Panel.ZIndex="2" Foreground="White" MaxWidth="80" MaxHeight="25" RenderTransformOrigin="1.356,0.56"/>
                <Button x:Name="addVideoButton" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="356" MaxWidth="500" MaxHeight="40" Grid.Column="1" Click="addVideoButton_Click"/>
                <Slider x:Name="slider1" Grid.Column="2" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Width="180"/>
            </Grid>
            <MediaElement x:Name="mainVideo" OpacityMask="Black" Margin="5,5,5,15" AllowDrop="True"/>
            <StackPanel x:Name="DropPanel" Width="792" DockPanel.Dock="Left" Panel.ZIndex="5" Drop="DropPanel_Drop" AllowDrop="True" DragEnter="DropPanel_DragEnter"/>
        </DockPanel>
    </Grid>
</Window>
